{% assign image1 = section.settings.image1 | img_url: 'master' %}
{% assign image2 = section.settings.image2 | img_url: 'master' %}
{% assign image3 = section.settings.image3 | img_url: 'master' %}

<div class="background-section">
  <div class="content">
    <h2>{{ section.settings.heading1 }}</h2>
    <h3>{{ section.settings.title1 }}</h3>
    <img src="{{ image1 }}" alt="Image 1">
  </div>

  <div class="content">
    <h2>{{ section.settings.heading2 }}</h2>
    <h3>{{ section.settings.title2 }}</h3>
    <img src="{{ image2 }}" alt="Image 2">
  </div>

  <div class="content">
    <h2>{{ section.settings.heading3 }}</h2>
    <h3>{{ section.settings.title3 }}</h3>
    <img src="{{ image3 }}" alt="Image 3">
  </div>
</div>

<style>
  .background-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  padding:20px 80px;
  border-radius:5px;
  }
  .content:hover{
  box-shadow: 0px 2px 15px 0px rgba(0,0,0,0.63);
  }
  .content::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
     background: linear-gradient(to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1));
    opacity: 1;
    transition: opacity 0.6s ease-in-out;
  }
  .content {
    position: relative;
    overflow: hidden;
    text-align: center;
  border-radius:5px;
  }

  .content img {
  z-index:-1;
  position:relative;
    width: 100%;
    height: auto;
    transition: transform 2.9s ease-in-out;
  }

  .content h2{
      color: white;
      font-weight: 800;
      font-size: 28px;
      /* line-height: 0.2rem; */
      padding: 10px 25px;
  position:absolute;
  bottom:40px;}
  .content h3 {
      color: white;
      font-weight: 800;
      font-size: 28px;
      /* line-height: 0.2rem; */
      padding: 10px 25px;
    position: absolute;
    bottom: -40px;
    left: 0;
    width: 100%;
    margin: 0;
    padding: 0;
    text-align: center;
    opacity: 0;
    transition: bottom 1.2s ease-in-out, opacity 1.2s ease-in-out;
  }

  .content:hover img {
    transform: scale(1.1);
  }
  .content:hover::before {

    opacity: 0;
  }


  .content:hover h3 {
    bottom: 20px;
    opacity: 120;
  }
  @media screen and (max-width: 1024px) {
  .background-section{
     flex-direction:column;
  align-items:center;

  }
  .content{
  margin-top:20px;}
  }
</style>

